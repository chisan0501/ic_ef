@model ic_ef.pallet_master

@{
    ViewBag.Title = "Create";
}

<style>
    h1 {
  font-family: Arial,sans-serif
  font-size : 80px;

}
    .container-full a {
  color:#efefef;
  text-decoration:none;
}

.v-center {
  margin-top:7%;
}
</style>
<div class="container-full">

    <div class="row">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal text-center v-center">
                <br /><br />
                <h1>Create Pallet</h1>
               <br />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="width:340px;text-align:center;margin:0 auto;">
                  
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.pallet_id, new { htmlAttributes = new { @class = "form-control",required = "required" , placeholder="Please Enter Pallet Name here" } })
                        @Html.ValidationMessageFor(model => model.pallet_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:340px;text-align:center;margin:0 auto;">
                   
                        <input type="submit" value="Create" class="btn btn-lg btn-primary" />

                    <a class="btn btn-lg btn-primary" style="margin:10px;" href="@Url.Action("inventoryManage", "Manage")"><i class="fa fa-undo"></i>Back</a>
                </div>
            </div>
        }

       

        

</div>
    </div>


     