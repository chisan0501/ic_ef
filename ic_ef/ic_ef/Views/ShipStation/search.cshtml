
@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/js/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/js/jquery.dataTables.min.js"></script>


<div class="ui two column centered grid">
    <div class="column">

        <div class="ui raised segment">

            <div class="ui info message">
                <i class="close icon"></i>
                <div class="header">
                    Search one of the following
                </div>
                <ul class="list">
                    <li>Qty</li>
                    <li>Order ID</li>
                    <li>Asset Tag</li>
                    <li>Item Name</li>
                    <li>Status</li>
                </ul>
            </div>


            <h2 class="ui header">Search Ship Station</h2>
            <div class="ui icon input">
                <input type="text" id="search" placeholder="Search">
                <i class="search icon"></i>

            </div>
            
            <p id="message"></p>
            <div id="tag">
                <a class="ui tag label">Dell</a>
                <a class="ui blue tag label">HP</a>
                <a class="ui red tag label">Shipped</a>
                <a class="ui teal tag label">RMA</a>
                <a id="today" class="ui yellow tag label"></a>
            </div>


            <div id="loader" class="ui disabled centered inline loader"></div>
            <h4 class="ui horizontal divider header">
                Result
            </h4>
            <table id="table_reminder" class="stripe" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        
                        <th>Name</th>
                        <th>Order #</th>
                        <th>Ship Date</th>
                        <th>Asset Tag</th>
                        <th>Note</th>
                        <th>Qty</th>
                        <th>Status</th>
                        
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            
        </div>


    </div>
    
</div>





<script>

    $('#tag').on('click', 'a', function () {

        $('#search').val(this.text);
        var e = jQuery.Event("keypress");
        e.which = 13; //choose the one you want
        e.keyCode = 13;
        $("#search").trigger(e);
    });

    var date = (new Date()).toISOString().split('T')[0];
    $('#today').text(date);  

    $('.message .close')
  .on('click', function () {
      $(this)
        .closest('.message')
        .transition('fade')
      ;
  })
    ;

    $('#search').keypress(function (e) {
        if (e.which == 13) {
            $('#message').html('');
            $('#loader').attr('class','ui active centered inline loader');
            var search_text = $('#search').val();
            var jsonObject = {
                item: search_text
            };

            $.ajax({
                url: "@Url.Action("search_json")",
                type: "POST",

            data: JSON.stringify(jsonObject),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                $('#loader').attr('class', 'ui disabled centered inline loader');
                $('#result_body').html("");


                $('#table_reminder').DataTable({
                    destroy: true,
                    data: data,
                    
                    columns: [
                                  
                                   { data: "item_name" },
                                   { data: "order_num" },
                                   { data: "shipment_date" },
                                   { data: "custom_field_2" },
                                   { data: "custom_field_3" },
                                   { data: "item_qty" },
                                   { data: "status" },
                                    

                    ]

                });


               

                if (data.length == 0) {
                    $('#loader').attr('class', 'ui disabled centered inline loader');
                    $('#message').css('color', 'red');
                    $('#message').html("No Results return for " + search_text);

                }
             
              
            }
        });
        }
    });

</script>