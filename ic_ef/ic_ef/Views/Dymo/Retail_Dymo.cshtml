
@{
    ViewBag.Title = "Retail_Dymo";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="https://use.fontawesome.com/bbd0418749.js"></script>

</head>

<h2><i class="fa fa-building" aria-hidden="true"></i> Retail Label</h2>

<br />



<div class="container">
    <div class="row">
        <div class="col-lg-4">

            <div class="panel panel-default">
                <div class="panel-heading">Search By Asset Tag</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="search_input">Search Asset Tag:</label>
                        <input type="text" required class="form-control" id="search_input">
                        <label for="price_text">Price:</label>
                        <input type="text" class="form-control" id="price_text">
                        <label for="title_text">Title:</label>
                        <input type="text" class="form-control" id="title_text" value="Mar">
                        <button type="submit" class="btn btn-default" id="submit_asset">Submit</button>
                        <button type="submit" class="btn btn-default" id="show_sample">Sample Label</button>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">Search By Stage</div>
                <div class="panel-body">

                    <div class="form-group">
                        <label for="search_input_stage">Search:</label>
                        <input type="text" class="form-control" id="search_input_stage">
                        <label for="sel1">Select Stage:</label>
                        <select class="form-control" id="sel1">
                            <option>Discovery</option>
                            <option>Rediscovery</option>
                            <option>Imaging</option>
                        </select>
                        <button type="submit" class="btn btn-default">Submit</button>
                       
                    </div>


                </div>
            </div>




        </div>

        <div class="col-lg-8">
            <img id="loading" src="~/Content/spinner.gif" alt="Updating ..." style="display: none;" />   
            <table class="table" id="table2">
                <thead>
                    <tr>
                        <th>Asset Tag</th>
                        <th>Model</th>
                        <th>CPU</th>
                        <th>RAM</th>
                        <th>HDD</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <img id="sampel_pic" src="~/Content/retail_sample.png" alt="sample" style="display: none;" />
        </div>
    </div>

</div>



<script>
    $(document).ready(function () {
        $("#show_sample").click(function () {
            $('#sampel_pic').toggle();
        })
       
        $("#submit_asset").click(function () {
            $('#loading').show();
         
            var asset = $("#search_input").val();
           
                
                $.getJSON('@Url.Action("RetailDymo")', {
                    asset: asset
                })
                .done(function (data) {

                    $('#loading').hide();
                        var tr;
                        for (var i = 0; i < data.length; i++) {
                            tr = $('<tr/>');
                            tr.append("<td>" + data[i].ictag + "</td>");
                            tr.append("<td>" + data[i].model + "</td>");
                            tr.append("<td>" + data[i].cpu + "</td>");
                            tr.append("<td>" + data[i].ram + "</td>");
                            tr.append("<td>" + data[i].hdd + "</td>");
                            $("#table2").append(tr);
                        }

                })

               .fail(function (jqxhr, textStatus, error) {
                   var err = textStatus + ", " + error;
                   console.log("Request Failed: " + err);
                });
           
        });
    });
</script>