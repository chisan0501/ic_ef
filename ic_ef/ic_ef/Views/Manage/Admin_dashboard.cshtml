
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin_dashboard</title>

    <link rel="stylesheet" type="text/css" href="~/css/semantic.min.css">
    <script src="~/js/jquery-1.12.3.js"></script>
    <script src="~/js/semantic.min.js"></script>
</head>
<body>
    <h2 class="ui header">
        <i class="settings icon"></i>
        <div class="content">
            Admin Settings
            <div class="sub header">Manage your settings</div>
        </div>
    </h2>
    <hr />
    <div class="ui grid">
        <div class="six wide column"><button id="reset_counter" class="positive ui button">Reset Asset Tag Counter</button></div>
        <div class="six wide column"></div>
       
    </div>
    <div id="reset_modal" class="ui modal">
        <i class="close icon"></i>
        <div class="header">
            Reset Asset Tags Counter
        </div>
        <div class="image content">
            <div class="image">
                <select class="ui dropdown">
                    <option value="">Value</option>
                    <option value="1">test</option>
                    
                </select>
            </div>
            <div class="description">
                <div class="ui icon input">
                    <input type="text" placeholder="Enter a reset value">
                    <i class="write icon"></i>
                </div>
            </div>
        </div>
        <div class="actions">
            <div class="ui button">Cancel</div>
            <div class="ui button">OK</div>
        </div>
    </div>
</body>
</html>

<script>
    $('.ui.dropdown')
  .dropdown()
    ;
    $('#reset_counter').click(function () {
        $('#reset_modal')
      .modal('show')
        ;
    });
        $('.ui.modal')
      .modal()
        ;
</script>
