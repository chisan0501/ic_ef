@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:white;" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:white">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        
              <li>
               
            <a style="color:white" href="@Url.Action("Register","Account")">
                <span class="glyphicon glyphicon-registration-mark">Register</span>
            </a>
        </li>
        <li>
            <a style="color:white"href="@Url.Action("Login","Account")">
                <span class="glyphicon glyphicon-user">Login</span>
            </a>
        </li>
       
    </ul>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryui")